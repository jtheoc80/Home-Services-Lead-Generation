{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "SERVICE_TYPE=backend poetry run python backend/main.py",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 120,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5
  },
  "environments": {
    "production": {
      "variables": {
        "ENVIRONMENT": "production",
        "DEBUG": "false",
        "SERVICE_TYPE": "backend"
      }
    },
    "development": {
      "variables": {
        "ENVIRONMENT": "development", 
        "DEBUG": "true",
        "SERVICE_TYPE": "backend"
      }
    }
  },
  "services": {
    "backend": {
      "build": {
        "builder": "NIXPACKS"
      },
      "deploy": {
        "startCommand": "SERVICE_TYPE=backend poetry run python backend/main.py",
        "healthcheckPath": "/health",
        "healthcheckTimeout": 120,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 5
      },
      "variables": {
        "SERVICE_TYPE": "backend",
        "PYTHONPATH": "/app"
      }
    },
    "scraper": {
      "build": {
        "builder": "NIXPACKS"
      },
      "deploy": {
        "startCommand": "SERVICE_TYPE=scraper poetry run python -m permit_leads --daemon --interval 3600",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 3
      },
      "variables": {
        "SERVICE_TYPE": "scraper",
        "PYTHONPATH": "/app"
      }
    },
    "frontend": {
      "build": {
        "builder": "NIXPACKS"
      },
      "deploy": {
        "startCommand": "SERVICE_TYPE=frontend cd frontend && npm start",
        "healthcheckPath": "/",
        "healthcheckTimeout": 60,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 3
      },
      "variables": {
        "SERVICE_TYPE": "frontend"
      }
    }
  },
  "plugins": {
    "postgres": {
      "type": "postgresql",
      "environmentMappings": {
        "DATABASE_URL": "DATABASE_URL"
      }
    }
  }
}