# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/database_name
# For SQLite (local development)
# DATABASE_URL=sqlite:///./data/permits/permits.db
DATABASE_NAME=permits
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=your_username
DATABASE_PASSWORD=your_password

# Application Configuration
APP_ENV=production
DEBUG=false
SECRET_KEY=your-secret-key-here
API_HOST=0.0.0.0
API_PORT=8000

# Lead Generation Settings
SAMPLE_DATA=0
DEFAULT_DAYS_LOOKBACK=30
MAX_RESULTS_PER_SOURCE=1000

# External API Keys (if needed)
# GOOGLE_MAPS_API_KEY=your_google_maps_api_key
# ACCELA_API_KEY=your_accela_api_key

# Data Storage Paths
DATA_OUTPUT_DIR=./data
PERMITS_DB_PATH=./data/permits/permits.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/backend.log

# Rate Limiting for Scrapers
SCRAPER_DELAY_SECONDS=1
SCRAPER_MAX_RETRIES=3
SCRAPER_TIMEOUT=30

# Feature Flags
ENABLE_LEAD_SCORING=true
ENABLE_DUPLICATE_DETECTION=true
ENABLE_DATA_EXPORT=true

# Export Control
ALLOW_EXPORTS=false

# Redis Configuration (for caching and session storage)
REDIS_URL=redis://localhost:6379/0

# Email Notifications (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# SMS Notifications (Twilio)
TWILIO_SID=your_twilio_account_sid_here
TWILIO_TOKEN=your_twilio_auth_token_here
TWILIO_FROM=+1xxxxxxxxxx

# Staging Environment Variables (for staging deployment)
# These will override the above when APP_ENV=staging
DATABASE_URL_STAGING=postgresql://staging_user:staging_password@staging_host:port/staging_db
SECRET_KEY_STAGING=your-staging-secret-key-here
REDIS_URL_STAGING=redis://staging-redis:6379/0
SENDGRID_API_KEY_STAGING=your_staging_sendgrid_api_key_here
TWILIO_SID_STAGING=your_staging_twilio_account_sid_here
TWILIO_TOKEN_STAGING=your_staging_twilio_auth_token_here
TWILIO_FROM_STAGING=+1xxxxxxxxxx
ALLOW_EXPORTS_STAGING=true