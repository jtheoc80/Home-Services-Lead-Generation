# Environment variables for permit_leads application
# Copy this file to .env and fill in your values

# ===== REQUIRED DATA SOURCES =====
# Harris County Issued Permits API (Required for permit scraping)
HC_ISSUED_PERMITS_URL=https://www.gis.hctx.net/arcgishcpid/rest/services/Permits/IssuedPermits/FeatureServer/0

# Application Mode
# Set to '1' to use sample/test data instead of live scraping
# SAMPLE_DATA=0

# Scraping Configuration
# Default delay between requests in seconds
# SCRAPE_DELAY=2.0

# User-Agent string for HTTP requests
# USER_AGENT=permit_scraper/1.0

# Output Configuration
# Default output directory for scraped data
# OUTPUT_DIR=data

# Database Configuration
# SQLite database file path (relative to output dir)
# DB_PATH=permits/permits.db

# Logging Configuration
# Set to 'DEBUG', 'INFO', 'WARNING', 'ERROR', or 'CRITICAL'
# LOG_LEVEL=INFO

# HTTP Configuration
# Request timeout in seconds
# REQUEST_TIMEOUT=30

# Maximum number of retry attempts for failed requests
# MAX_RETRIES=3

# API Keys (if needed for external services)
# GOOGLE_MAPS_API_KEY=your_api_key_here
# GEOCODING_API_KEY=your_api_key_here

# Email/Notification Configuration (for automated runs)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@example.com
# SMTP_PASS=your_app_password
# ALERT_EMAIL=admin@example.com

# Export Control
ALLOW_EXPORTS=false

# Redis Configuration (for caching and session storage)
REDIS_URL=redis://localhost:6379/0

# Email Notifications (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# SMS Notifications (Twilio)
TWILIO_SID=your_twilio_account_sid_here
TWILIO_TOKEN=your_twilio_auth_token_here
TWILIO_FROM=+1xxxxxxxxxx