# Frontend Environment Variables
# Copy this file to .env.local and fill in your actual values

# Required Supabase Configuration (browser-exposed)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
NEXT_PUBLIC_API_BASE=http://localhost:8000

# Test Mode Configuration
# Set to true to bypass RLS policies for E2E testing (service-role writes)
# NOTE: Set LEADS_TEST_MODE=false after validation to ensure security
LEADS_TEST_MODE=true

# Debug API Key for trace endpoint protection
DEBUG_API_KEY=your_debug_api_key_here

# ===== APPLICATION SCOPE =====
# Geographic scope for frontend (houston, texas, national)
NEXT_PUBLIC_LAUNCH_SCOPE=houston

# Default region for new users
NEXT_PUBLIC_DEFAULT_REGION=tx-houston

# ===== FEATURE FLAGS =====
# Whether exports are enabled in the UI
NEXT_PUBLIC_EXPORTS_ENABLED=false

# Whether ML scoring features are available
NEXT_PUBLIC_ML_SCORING_ENABLED=false

# Whether to show admin-only features
NEXT_PUBLIC_SHOW_ADMIN_FEATURES=false

# Whether notifications are enabled
NEXT_PUBLIC_NOTIFICATIONS_ENABLED=true

# Whether real-time updates are enabled
NEXT_PUBLIC_REALTIME_UPDATES=true

# ===== FEATURE TOGGLES =====
# Enable CSV export functionality
NEXT_PUBLIC_FEATURE_CSV_EXPORT=false

# Enable bulk actions on leads
NEXT_PUBLIC_FEATURE_BULK_ACTIONS=true

# Enable advanced filtering options
NEXT_PUBLIC_FEATURE_ADVANCED_FILTERS=true

# Enable lead scoring display
NEXT_PUBLIC_FEATURE_LEAD_SCORING=true

# Enable notifications
NEXT_PUBLIC_FEATURE_NOTIFICATIONS=true

# Enable analytics dashboard
NEXT_PUBLIC_FEATURE_ANALYTICS=true

# ===== GEOGRAPHIC CONFIGURATION =====
# Default counties for Houston scope (comma-separated)
NEXT_PUBLIC_DEFAULT_COUNTIES=tx-harris,tx-fort-bend,tx-brazoria,tx-galveston

# Supported regions (comma-separated)
NEXT_PUBLIC_SUPPORTED_REGIONS=tx-houston

# ===== APPLICATION ENVIRONMENT =====
# Environment name (development, staging, production)
NEXT_PUBLIC_ENVIRONMENT=development

# Enable debug mode in frontend
NEXT_PUBLIC_DEBUG_MODE=false

# ===== BACKEND CONFIGURATION (for API routes) =====
# Database URL for backend API routes
DATABASE_URL=postgresql://user:password@host:port/database

# NextAuth configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# Export control
ALLOW_EXPORTS=false

# ===== ANALYTICS & MONITORING =====
# Google Analytics measurement ID (optional)
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking (optional)
# NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ===== STRIPE CONFIGURATION =====
# Stripe publishable key (safe to expose to client)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# ===== VERCEL WEBHOOK CONFIGURATION =====
# Vercel serverless webhook
STRIPE_WEBHOOK_SECRET=
INTERNAL_BACKEND_WEBHOOK_URL=
INTERNAL_WEBHOOK_TOKEN=
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=