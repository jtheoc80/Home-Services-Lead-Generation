# Next.js Environment Variables

# Environment Configuration
NEXT_PUBLIC_ENV=production
NEXT_PUBLIC_API_BASE=https://api.leadledderpro.com

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Database Configuration (for ML training scripts)
DATABASE_URL=postgresql://user:password@host:port/database

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# Feature Flags
ENABLE_ML_SCORING=false
ENABLE_LEAD_FEEDBACK=true
ENABLE_NIGHTLY_TRAINING=false

# ML Model Configuration
MODEL_DIR=../backend/models
ML_TRAINING_SCHEDULE=0 2 * * *  # Daily at 2 AM
MIN_TRAINING_SAMPLES=50

# API Configuration
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_WINDOW=900  # 15 minutes in seconds

# Logging
LOG_LEVEL=info
ENABLE_DEBUG_LOGGING=false

# Export Control
ALLOW_EXPORTS=false

# Redis Configuration (for caching and session storage)
REDIS_URL=redis://localhost:6379/0

# Email Notifications (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# SMS Notifications (Twilio)
TWILIO_SID=your_twilio_account_sid_here
TWILIO_TOKEN=your_twilio_auth_token_here
TWILIO_FROM=+1xxxxxxxxxx

# Staging Environment Variables (for staging deployment)
# These will override the above when NEXT_PUBLIC_ENV=staging
NEXT_PUBLIC_ENV_STAGING=staging
NEXT_PUBLIC_API_BASE_STAGING=https://staging-api.leadledderpro.com
DATABASE_URL_STAGING=postgresql://staging_user:staging_password@staging_host:port/staging_db
REDIS_URL_STAGING=redis://staging-redis:6379/0
SENDGRID_API_KEY_STAGING=your_staging_sendgrid_api_key_here
TWILIO_SID_STAGING=your_staging_twilio_account_sid_here
TWILIO_TOKEN_STAGING=your_staging_twilio_auth_token_here